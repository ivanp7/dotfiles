# PATH
export HOMEPATH="$(
    find -L $HOME/bin -path "*/.*" -prune -o -type d -print |
    tr '\n' ':' | head -c -1)"
export PATH="$(echo "$(echo "$PATH" | sed "s@$HOME/bin[^:]*@@g"):$HOMEPATH" | sed 's/:\+/:/g')"

# XDG Base Directory

export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache
export XDG_DATA_HOME=$HOME/.local/share

export XDG_DATA_DIRS=/usr/local/share:/usr/share
export XDG_CONFIG_DIRS=/etc/xdg

# default applications

export PAGER=/usr/share/nvim/runtime/macros/less.sh
export EDITOR=/usr/bin/nvim
export VISUAL=$EDITOR
export FILE=lfcd

export TERMINAL=/usr/bin/st
export VIEWER=/usr/bin/sxiv
export PLAYER=/usr/bin/mpv
export PDFVIEWER=/usr/bin/zathura
export BROWSER=/usr/bin/surf

# cleanup

export XINITRC=$XDG_CONFIG_HOME/X11/xinitrc
export XSERVERRC=$XDG_CONFIG_HOME/X11/xserverrc

[ -n "${XDG_RUNTIME_DIR+1}" ] && export XAUTHORITY=$XDG_RUNTIME_DIR/Xauthority

. $XDG_CONFIG_HOME/zsh/cleanup

# default font
if [ -r "$XDG_CONFIG_HOME/default_font" ]
then export DEFAULT_FONT=$(cat "$XDG_CONFIG_HOME/default_font")
else export DEFAULT_FONT="xos4 Terminus:size=10"
fi

# fixes for things

export GNUMAKEFLAGS=--no-print-directory

# vim: set ft=zsh:
