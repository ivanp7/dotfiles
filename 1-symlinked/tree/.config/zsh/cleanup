# editing & organizing & calculation

export TASKDATA=$HOME/.task
export TASKRC=$TASKDATA/config

export LESSHISTFILE=$XDG_CACHE_HOME/less-history

export SDCV_HISTFILE=$XDG_CACHE_HOME/sdcv-history

export OCTAVE_SITE_INITFILE=$XDG_CONFIG_HOME/octave/octaverc
export OCTAVE_HISTFILE=$XDG_CACHE_HOME/octave-history

export SCREENRC=$XDG_CONFIG_HOME/screen/screenrc

# security

export PASSWORD_STORE_DIR=$XDG_DATA_HOME/password-store
export GNUPGHOME=$XDG_DATA_HOME/gnupg

# utilities 

export WGETRC=$XDG_CONFIG_HOME/wgetrc

# GTK

export GTK_RC_FILES=$XDG_CONFIG_HOME/gtk-1.0/gtkrc
export GTK2_RC_FILES=$XDG_CONFIG_HOME/gtk-2.0/gtkrc

# languages

export GOPATH=$XDG_DATA_HOME/go
export _JAVA_OPTIONS=-Djava.util.prefs.userRoot=$XDG_CONFIG_HOME/java
export CARGO_HOME=$XDG_DATA_HOME/cargo

# custom

[ -x "$XDG_CONFIG_HOME/zsh/extra-cleanup" ] && . $XDG_CONFIG_HOME/zsh/extra-cleanup

# vim: ft=zsh:
